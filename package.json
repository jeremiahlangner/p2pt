{
  "name": "p2pt",
  "version": "1.5.1",
  "description": "P2P connections with WebTorrent trackers",
  "main": "dist/node.js",
  "browser": "dist/p2pt.js",
  "types": "dist/p2pt.d.ts",
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc && esbuild src/p2pt.ts --outfile=dist/node.js --platform=node --minify --sourcemap=external",
    "build:browser": "tsc && esbuild src/*.ts --outdir=dist --minify --bundle --define:global=window --inject:esbuild.inject.js --legal-comments=none --sourcemap=external",
    "test-browser": "BROWSER_TEST=1 airtap --local test/*.js",
    "test-node": "node test/*.js",
    "test:all": "npm run test-node && npm run test-browser",
    "test": "standard && start-server-and-test 'node start-trackers.js' 5001 test:all"
  },
  "dependencies": {
    "bittorrent-tracker": "^9.14.5",
    "randombytes": "^2.1.0",
    "simple-sha1": "^3.0.1"
  },
  "optionalDependencies": {
    "wrtc": "^0.4.6"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/randombytes": "^2.0.0",
    "@types/simple-peer": "^9.11.5",
    "@types/simple-sha1": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "airtap": "^3.0.0",
    "browserify": "^16.5.1",
    "buffer": "^6.0.3",
    "esbuild": "^0.15.12",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.26.0",
    "simple-peer": "^9.11.1",
    "standard": "^14.3.4",
    "start-server-and-test": "^1.11.2",
    "tape": "^5.0.1",
    "tinyify": "^3.0.0",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subins2000/p2pt.git"
  },
  "keywords": [
    "webtorrent",
    "p2p",
    "simple-peer",
    "peer"
  ],
  "author": "subins2000",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/subins2000/p2pt/issues"
  },
  "homepage": "https://github.com/subins2000/p2pt#readme",
  "standard": {
    "ignore": [
      "dist"
    ]
  }
}
